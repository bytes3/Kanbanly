{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": false,
    "maxNodeModuleJsDepth": 0,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/backend/*": ["./*"]
    },
    "strict": true,
    "noEmit": true,
    "types": ["bun"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
